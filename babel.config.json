// Файл может быть использован для ручной конфигурации Babel, полезно для кроссплатформенности (jest и прочие др. фреймворки)

{
    "presets": [
        "@babel/preset-env", // вне зависимости от платформы обеспечивает поддержку различных преобразований синтаксиса
        "@babel/preset-typescript", // TS
        [
            "@babel/preset-react", // для JSX
            {
                "runtime": "automatic"
            }
        ]
    ]
}